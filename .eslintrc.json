{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "settings":{
        "react": {
            "version": "detect"
        }
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/react-in-jsx-scope":"off",
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes":[
            "error",
            "double"
        ],
        "object-curly-newline": [
            "error",
            "always"
        ],
        "no-restricted-exports": [
            "error",
            {
                "restrictedNamedExports": ["foo", "bar"]
            }
        ],
        "jsx-a11y/label-has-associated-control": [
            "error",
            {
                "assert": "either"
            }
        ]
        
    }
}